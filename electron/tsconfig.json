{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": "..",
    "paths": {
      "*": ["*", "node_modules/*"]
    }
  },
  "include": ["src/**/*", "../src/CommonSKUAutomation.ts", "../src/StateManager.ts", "../src/config.ts", "../src/logger.ts", "../src/types.ts", "../src/automation.ts", "../src/scheduler.ts"],
  "exclude": ["node_modules", "dist", "../src/extract-*.ts", "../src/test-*.ts", "../src/index.ts"]
}
