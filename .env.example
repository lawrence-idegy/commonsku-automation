# CommonSKU Automation Configuration

# CommonSKU Credentials (REQUIRED)
COMMONSKU_URL=https://idegy.commonsku.com
COMMONSKU_USERNAME=your-email@example.com
COMMONSKU_PASSWORD=your-password

# Browser Mode - Set to 'true' for headless operation
HEADLESS=false

# Downloads directory - Reports will be saved here
DOWNLOAD_DIR=./downloads

# Timeout settings (in milliseconds)
NAVIGATION_TIMEOUT=60000
ACTION_TIMEOUT=30000

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=5000

# Enable debug logging
DEBUG=true

# Schedule settings (if using scheduled runs)
RUN_SCHEDULED=false
SCHEDULE_TIME=09:00

# Email notifications (optional)
ENABLE_NOTIFICATIONS=false
NOTIFICATION_EMAIL=

# Google Drive auto-upload settings
GDRIVE_ENABLED=false
GDRIVE_REMOTE_NAME=gdrive
GDRIVE_REMOTE_FOLDER=CommonSKU Reports
GDRIVE_ORGANIZATION_TYPE=by-date
GDRIVE_UPLOAD_AFTER_EACH=true
GDRIVE_TRANSFER_COUNT=4
GDRIVE_SHOW_PROGRESS=true
